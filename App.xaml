<Application x:Class="TimeTracker.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:helpers="clr-namespace:TimeTracker.Helpers"
             xmlns:vm="clr-namespace:TimeTracker.ViewModels"
             xmlns:local="clr-namespace:TimeTracker">
    <Application.Resources>
        <Style TargetType="{x:Type TextElement}">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <Style TargetType="Control">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <Style TargetType="Border">
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Direction="260" ShadowDepth="3" BlurRadius="10" Opacity="0.3" />
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid x:Name="Root" RenderTransformOrigin="0.5,1">
                            <Grid.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform x:Name="scaleTransform" ScaleX="1" ScaleY="1"/>
                                    <TranslateTransform x:Name="translateTransform" Y="0"/>
                                </TransformGroup>
                            </Grid.RenderTransform>

                            <Grid.Effect>
                                <DropShadowEffect x:Name="shadowEffect"
                                                  Color="Black"
                                                  Direction="260"
                                                  ShadowDepth="3"
                                                  BlurRadius="10"
                                                  Opacity="0"/>
                            </Grid.Effect>

                            <Border x:Name="Base"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{Binding
                                                RelativeSource={RelativeSource TemplatedParent},
                                                Path=(helpers:ButtonHelper.CornerRadius)}"/>

                            <Border x:Name="Overlay"
                                Background="White"
                                BorderBrush="White"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Opacity="0"
                                CornerRadius="{Binding
                                                RelativeSource={RelativeSource TemplatedParent},
                                                Path=(helpers:ButtonHelper.CornerRadius)}"/>

                            <ContentPresenter />
                        </Grid>

                        <ControlTemplate.Triggers>
                            <DataTrigger Binding="{Binding IsRunning}" Value="True">
                                <DataTrigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <!-- Opacidad -->
                                            <DoubleAnimation Storyboard.TargetName="Overlay"
                                                             Storyboard.TargetProperty="Opacity"
                                                             To="0.1" Duration="0:0:0.2"/>
                                            <!-- Background -->
                                            <ColorAnimation Storyboard.TargetName="Overlay"
                                                             Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                             To="White" Duration="0:0:0.2"/>
                                            <!-- BorderThickness -->
                                            <ThicknessAnimation Storyboard.TargetName="Base"
                                                             Storyboard.TargetProperty="BorderThickness"
                                                             To="3" Duration="0:0:0.2"/>
                                            <!-- BorderBrush -->
                                            <ColorAnimation Storyboard.TargetName="Base"
                                                             Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                                             To="White" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </DataTrigger.EnterActions>

                                <DataTrigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <!-- Opacidad -->
                                            <DoubleAnimation Storyboard.TargetName="Overlay"
                                                             Storyboard.TargetProperty="Opacity"
                                                             To="0" Duration="0:0:0.2"/>
                                            <!-- Background -->
                                            <ColorAnimation Storyboard.TargetName="Overlay"
                                                             Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                             To="White" Duration="0:0:0.2"/>
                                            <!-- BorderThickness -->
                                            <ThicknessAnimation Storyboard.TargetName="Base"
                                                             Storyboard.TargetProperty="BorderThickness"
                                                             To="0" Duration="0:0:0.2"/>
                                            <!-- BorderBrush -->
                                            <ColorAnimation Storyboard.TargetName="Base"
                                                             Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                                             To="White" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </DataTrigger.ExitActions>
                            </DataTrigger>

                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Cursor" Value="Hand"/>
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <!-- Sombra -->
                                            <DoubleAnimation Storyboard.TargetName="shadowEffect"
                                                             Storyboard.TargetProperty="Opacity"
                                                             To="0.3"
                                                             Duration="0:0:0.2"/>
                                            <!-- Opacidad -->
                                            <DoubleAnimation Storyboard.TargetName="Overlay"
                                                             Storyboard.TargetProperty="Opacity"
                                                             To="0.1" Duration="0:0:0.2"/>
                                            <!-- Escala Y -->
                                            <DoubleAnimation Storyboard.TargetName="scaleTransform"
                                                             Storyboard.TargetProperty="ScaleY"
                                                             To="1.03" Duration="0:0:0.2"/>
                                            <!-- Traslación Y -->
                                            <DoubleAnimation Storyboard.TargetName="translateTransform"
                                                             Storyboard.TargetProperty="Y"
                                                             To="-2" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>

                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <!-- Sombra -->
                                            <DoubleAnimation Storyboard.TargetName="shadowEffect"
                                                             Storyboard.TargetProperty="Opacity"
                                                             To="0"
                                                             Duration="0:0:0.2"/>
                                            <!-- Opacidad -->
                                            <DoubleAnimation Storyboard.TargetName="Overlay"
                                                             Storyboard.TargetProperty="Opacity"
                                                             To="0" Duration="0:0:0.2"/>
                                            <!-- Escala Y -->
                                            <DoubleAnimation Storyboard.TargetName="scaleTransform"
                                                             Storyboard.TargetProperty="ScaleY"
                                                             To="1.00" Duration="0:0:0.2"/>
                                            <!-- Traslación Y -->
                                            <DoubleAnimation Storyboard.TargetName="translateTransform"
                                                             Storyboard.TargetProperty="Y"
                                                             To="0" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>

                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Overlay" Property="Background" Value="Black"/>
                                <Setter TargetName="Overlay" Property="Opacity" Value="0.1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Application.Resources>
</Application>
